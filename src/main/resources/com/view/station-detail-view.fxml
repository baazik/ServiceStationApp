<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mb.company.controllers.StationDetailController">
    <children>
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Station Detail" />
            <Label fx:id="idLabel" text="Id:" />
            <Label fx:id="nameLabel" text="Name:" />
            <Label fx:id="addressLabel" text="Address:" />
            <Label fx:id="countryLabel" text="Country:" />
        </VBox>
        <TableView fx:id="computersTableView">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="ipAddressColumn" text="IP Address" />
                <TableColumn fx:id="computerTypeColumn" text="Computer Type" />
            </columns>
        </TableView>
        <Button fx:id="backButton" mnemonicParsing="false" text="Back" onAction="#backToStations" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
